<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Space Calculator</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      max-width: 800px;
      margin: 0 auto;
    }
  </style>
</head>

<body>
  <h1>Save Product Form</h1>
  <form action="/save-product" method="POST">
    <div>
      <label>Product Name:</label>
      <input type="text" name="productName">
    </div>
    <div>
      <label>Number of poles:</label>
      <input type="number" name="poles">
    </div>

    <button type="submit">Save Product</button>
  </form>

  <h2>All Products</h2>
  <ul>
    <% productsArray.map(function(item) { %>
      <li>

        <%= item.name %>
      </li>
      <li>
        <%= item.poles %>
      </li>
      <% }); %>
  </ul>


</body>

</html>